<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<project basedir="." default="build" name="FCS">
	<property file="${local.properties}" />

	<property environment="env" />

	<property name="debuglevel" value="source,lines,vars" />
	<property name="target" value="1.6" />
	<property name="source" value="1.6" />

	<!-- ================================= 
          target: clean              
         ================================= -->
	<target name="clean" description="Remove all generated files">
		<delete dir="bin" />
		<delete file="FCS.jar" />
	</target>

	<target depends="clean" name="cleanall">
		<ant antfile="build.xml" dir="${ERS.location}" inheritAll="false" target="clean" />
	</target>

	<!-- - - - - - - - - - - - - - - - - - 
          target: init                      
         - - - - - - - - - - - - - - - - - -->
	<target name="init">
		<mkdir dir="bin" />
		<copy includeemptydirs="false" todir="bin">
			<fileset dir="src">
				<exclude name="**/*.java" />
			</fileset>
		</copy>
	</target>

	<!-- ================================= 
          target: compile              
         ================================= -->
	<target name="compile" depends="init" description="Compile Java sources">
		<javac debug="true" debuglevel="${debuglevel}" destdir="bin" source="${source}" target="${target}" includeantruntime="false">
			<src path="src" />
		</javac>
	</target>

	<!-- ================================= 
          target: javadoc              
         ================================= -->
    <target name="javadoc">
        <javadoc access="package" author="true" classpath="." destdir="doc" nodeprecated="false" nodeprecatedlist="false" noindex="true" nonavbar="false" notree="false" packagenames="org.isac.fcs" source="1.6" sourcepath="src" splitindex="false" use="true" version="true"/>
    </target>
         
	<!-- - - - - - - - - - - - - - - - - - 
          target: fcs-jar                      
         - - - - - - - - - - - - - - - - - -->
	<target name="fcs-jar" depends="compile">
		<jar destfile="FCS.jar" duplicate="fail">
			<fileset dir="bin" includes="org/isac/fcs/*" />
		</jar>
	</target>
         
	<!-- - - - - - - - - - - - - - - - - - 
          target: fcsdoc-jar                      
         - - - - - - - - - - - - - - - - - -->
	<target name="fcsdoc-jar" depends="compile,javadoc">
		<jar destfile="FCS-javadoc.jar" duplicate="fail">
			<fileset dir="doc" />
		</jar>
	</target>
	
	<!-- ================================= 
          target: build              
         ================================= -->
	<target name="build" depends="fcs-jar, fcsdoc-jar" description="Build FCS library jar" />

</project>
